{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/microsoft/hve-core/schemas/skill-frontmatter.schema.json",
  "title": "Skill File Frontmatter Schema",
  "description": "Frontmatter schema for SKILL.md files in skill directories",
  "type": "object",
  "required": ["name", "description", "maturity"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "minLength": 1,
      "description": "Unique identifier for the skill, must match the directory name in lowercase kebab-case"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Brief description of the skill"
    },
    "maturity": {
      "type": "string",
      "enum": ["stable", "preview", "experimental", "deprecated"],
      "description": "Maturity level of the skill"
    }
  },
  "additionalProperties": false
}
